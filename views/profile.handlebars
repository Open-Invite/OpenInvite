<!DOCTYPE html>
<html>

<head>
  <link href="css/bootstrap.css" rel="stylesheet"></link>
  <link href="css/bootstrap-theme.css" rel="stylesheet"></link>
  <link href="css/simple-sidebar.css" rel="stylesheet">
  <link href="css/style.css" rel="stylesheet"></link>
  <link href="css/popUpStyle.css" rel="stylesheet"></link>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" charset="utf-8">
  <title>OpenInvite</title>
</head>

<body>
  <div id="wrapper">
    <div id="sidebar-wrapper">
      <ul class="sidebar-nav">
        <li class="sidebar-nav-active sidebar-brand">
          <a href="/profile">
            <img class="profile-picture" src="{{profile.profilePicture}}"></img>
            {{profile.name}}
          </a>
        </li>
        <hr></hr>
        <li>
            <a href="/"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
        </li>
        <li>
            <a href="/events"><i class="fa fa-calendar-check-o" aria-hidden="true"></i> My Events</a>
        </li>
        <li>
            <a href="/culture"><i class="fa fa-compass" aria-hidden="true"></i> Explore Local Culture</a>
        </li>
        <li>
            <a href="/help"><i class="fa fa-question-circle" aria-hidden="true"></i> Help</a>
        </li>
      </ul>
    </div>

    <div class="banner">
      <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">
        <i class="fa fa-bars" aria-hidden="true"></i>
      </a>
      <div class="jumbotron text-center">
        <h1>OpenInvite</h1>
        <button onclick="document.getElementById('id01').style.display='block'" type="button" class="btn btn-default" id="editProfileButton">
          <i class="fa fa-pencil fa-fw" aria-hidden="true"></i> Edit
        </button>
	  </div>

    </div>


    <div id="profile" class = "jumbotron text-center">
    	<div>
    		<img class="profile-picture" width="100" height="100" src="{{profile.profilePicture}}"></img>
    		<h2>{{profile.name}}<br/></h2>
    		<h3>{{profile.location}}</h3>
    	</div>
    	&nbsp;
    	<div>
    		<h3> Username: {{profile.username}} </h3>
    		<h3> Email: {{profile.email}}</h3>
    	</div>
    </div>


<!--Edit Profile settings-->
<!-- The Modal -->
<div id="id01" class="modal">
  <span onclick="document.getElementById('id01').style.display='none'" class="close" title="Close Modal">&times;</span>

  <!-- Modal Content -->
  <form class="modal-content animate" action="/edit_profile" method="post">
    <div class="imgcontainer">
      <img src="http://lorempixel.com/100/100/people/" alt="Avatar" class="avatar">
    </div>

    <div class="container">
      <div>
      <label><b>Username</b></label>
      <input type="text" placeholder="Enter Username" name="username" required>
      </div>

      <div>
      <label><b>Email    </b></label>
      <input type="text" placeholder="Enter Email" name="email" required>
      </div>

      <div>
      <label><b>Password</b></label>
      <input type="password" placeholder="Enter Password" name="password" required>
      </div>

      <div class="clearfix">
      <button type="button" onclick="document.getElementById('id01').style.display='none'" class="cancelbtn">Cancel</button>
	  <button type="submit" class="signupbtn">Save</button>
      </div>

    </div>
  </form>
</div>














  </div>
  <script src="https://use.fontawesome.com/6a9c821b61.js"></script>
  <script src="js/jquery-1.11.0.js"></script>
  <script src="js/bootstrap.js"></script>
  <script src="js/main.js"></script>
  <script src="js/popUp.js"></script>
</body>

</html>
