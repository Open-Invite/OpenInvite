<!DOCTYPE html>
<html>

<head>
  <link href="css/bootstrap.css" rel="stylesheet"></link>
  <link href="css/bootstrap-theme.css" rel="stylesheet"></link>
  <link href="css/simple-sidebar.css" rel="stylesheet">
  <link href="css/style.css" rel="stylesheet"></link>
  <link href="css/popUpStyle.css" rel="stylesheet"></link>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" charset="utf-8">
  <title>OpenInvite</title>
</head>

<body>
  <div id="wrapper">
    <div id="sidebar-wrapper">
      <ul class="sidebar-nav">
        <li class="sidebar-brand">
            <a href="/profile">
              <img class="profile-picture" src="http://lorempixel.com/50/50/people/"></img>
              Skyler Taylor
            </a>
        </li>
        <hr></hr>
        <li>
            <a href="/"><i class="fa fa-home" aria-hidden="true"></i> Home</a>
        </li>
        <li class="sidebar-nav-active">
            <a href="/events"><i class="fa fa-calendar-check-o" aria-hidden="true"></i> My Events</a>
        </li>
        <li>
            <a href="/culture"><i class="fa fa-compass" aria-hidden="true"></i> Explore Local Culture</a>
        </li>
        <li>
            <a href="/help"><i class="fa fa-question-circle" aria-hidden="true"></i> Help</a>
        </li>
      </ul>
    </div>

    <div class="banner">
      <a href="#menu-toggle" class="btn btn-default" id="menu-toggle">
        <i class="fa fa-bars" aria-hidden="true"></i>
      </a>

      <div class="jumbotron text-center">
        <h1>OpenInvite</h1>
		<!-- Button to open the modal -->
		<button onclick="document.getElementById('eventPopUp').style.display='block'" type="button" class="btn btn-default">
          <i class="fa fa-plus-square" aria-hidden="true"></i> Create Event
        </button>
      </div>
    </div>

    <div class="container">
      <h3>Your Events</h3>

      <br/>

      <table class="table table-hover events-table">

        {{#each events}}
        <thead>
          <tr>
            <th>{{name}}</th>
            <th></th>
            <th>{{location}}</th>
            <th></th>
            <th>{{date}}, <br/> {{time}}</th>
          </tr>
        </thead>
        <tbody>
          {{#each going}}
          <tr>
            <td></td>
            <td>
              <img class="profile-picture" src="http://lorempixel.com/20/20/people/"></img>
              {{name}}
            </td>
            <td></td>
            <td><p class="event-attending">Attending</p></td>
            <td></td>
          </tr>
          {{else}}
          {{/each}}
          {{#each cancelled}}
          <tr>
            <td></td>
            <td>
              <img class="profile-picture" src="http://lorempixel.com/20/20/people/"></img>
              {{name}}
            </td>
            <td></td>
            <td><p class="event-cancelled">Cancelled</p></td>
            <td></td>
          </tr>
          {{else}}
          {{/each}}
        </tbody>
        {{else}}
        You haven't made any events
        {{/each}}

      </table>

    </div>


  </div>
  
  
  <!-- The Modal (contains the Sign Up form) -->
<div id="eventPopUp" class="modal">
    <span onclick="document.getElementById('eventPopUp').style.display='none'" class="close" title="Close Modal">&times;</span>
    
  <form class="modal-content animate" action="action_page.php">
        
    <div class="container">
            <label><b>Title</b></label>
            <input type="text" placeholder="My Awesome Event" name="title" required>
            <label><b>Location</b></label>
            <input type="text" placeholder="@My Place" name="loc" required>
            <label><b>Description</b></label>
            <input type="text" placeholder="Come to My Awesome Event" name="descr" required>
      <br>
      <label><b>Date and Time</b></label>
            <input type="text" placeholder="4 Feb, 5:00" name="time" required>
  <form>
    		<input type="radio" name="am/pm" value="AM" checked> AM
    		<input type="radio" name="am/pm" value="PM"> PM<br>
  </form> 
       
        <p>By creating an event you agree to our <a href="#">Terms & Privacy</a>.</p>
        <div class="clearfix">
          <button type="button" onclick="document.getElementById('eventPopUp').style.display='none'" class="cancelbtn">Cancel</button>
          <button type="submit" class="signupbtn">Creat Your Event</button>
        </div>
      </div>
    </form>
</div>
  
  

  <script src="https://use.fontawesome.com/6a9c821b61.js"></script>
  <script src="js/jquery-1.11.0.js"></script>
  <script src="js/bootstrap.js"></script>
  <script src="js/main.js"></script>
  <script src="js/popUp.js"></script>
</body>

</html>
